# Set Alt key as super key
set $mod Mod1

# Turn borders off
for_window [class="^.*"] border pixel 0

# Set an inner gap of 10px
gaps inner 10
gaps outer -10

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split in horizontal orientation
bindsym $mod+b split h

# Split in vertical orientation
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Focus the child container
#bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $terminals "1" 
set $browser "2"
set $helix "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $music "7"
set $docs "8"
set $communication "9"
set $ws10 "10"

# Bind workspaces to displays
workspace $terminals output primary
workspace $browser output primary
workspace $helix output primary
workspace $ws4 output primary
workspace $ws5 output primary
workspace $ws6 output primary
workspace $music output HDMI-A-1
workspace $docs output HDMI-A-1
workspace $communication output HDMI-A-1
workspace $ws10 output HDMI-A-1

# Switch to workspace
bindsym $mod+1 workspace $terminals
bindsym $mod+2 workspace $browser
bindsym $mod+3 workspace $helix
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $music
bindsym $mod+8 workspace $docs
bindsym $mod+9 workspace $communication
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $terminals
bindsym $mod+Shift+2 move container to workspace $browser
bindsym $mod+Shift+3 move container to workspace $helix
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $music
bindsym $mod+Shift+8 move container to workspace $docs
bindsym $mod+Shift+9 move container to workspace $communication
bindsym $mod+Shift+0 move container to workspace $ws10

# Bind programs to specific workspaces
assign [class="Alacritty"] $terminals
assign [class="firefox"] $browser
for_window [class="Spotify"] move to workspace $music
assign [class="discord"] $communication
assign [class="TeamSpeak 3"] $communication

bindsym $mod+Shift+r restart

mode "resize" {
        bindsym h resize grow width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink width 10 px or 10 ppt

        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Set custom bindings
bindsym $mod+Return exec --no-startup-id alacritty
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id rofi -show drun appmenu
bindsym $mod+x exec --no-startup-id ~/.config/rofi/power.sh
bindsym $mod+Shift+x exec --no-startup-id i3lock
bindsym $mod+Shift+s exec --no-startup-id flameshot gui
bindsym $mod+c exec --no-startup-id chromium

# Set cursor theme and size
exec --no-startup-id gsettings set "org.gnome.desktop.interface" cursor-theme "Bibata-Original-Ice"
exec --no-startup-id xrdb ~/.Xresources

# Start notification handler
exec --no-startup-id dunst

# Setup dual monitors and wallpaper, values taken from ARandR
exec_always --no-startup-id xrandr --output HDMI-A-1 --mode 1920x1080 --pos 0x0 --rotate normal --scale 1x1 --output DisplayPort-0 --primary --mode 2560x1440 --pos 1920x254 --rotate normal --scale 1x1
exec_always --no-startup-id feh --bg-fill ~/.config/wallpapers/primary.png --bg-fill ~/.config/wallpapers/primary.png

bar {
    output DisplayPort-0
    tray_output primary
    font pango:Hack Nerd Font, FontAwesome 12
    position top
    status_command i3status-rs ~/.config/i3status-rust/config.toml
}

bar {
    output HDMI-A-1
    tray_output none
    font pango:Hack Nerd Font, FontAwesome 12
    position top
}
